export const register = async (req,res)=>{
try{
// console.log(req.body);
const {name,Account,Ifsccode}=req.body;
// validation
if (!name) return res.status(400).send("Name is required");
if(!Ifsccode||Ifsccode.length==8){
    return res
    .status(400)
    .send("Password is required and should be min 6 characters long");
}
let userExist = await User.findOne({Account }).exec();
if(userExist) return res.status(400).send("Account is taken");

// hash password
// const hashedPassword = await hashPassword(password);

// register
const user = new User({
    name,
    Account,
    Ifsccode,

});
await user.save();
console.log("Saved user ", user);
return res.json({ok: true});
}catch(err){
    console.log(err);
    return res.status(400).send("Error. Try again");
}
}


export const makeInstructor = async (req, res) => {
  try {
    // 1. find user from db
    const user = await User.findById(req.user._id).exec();
    // 2. if user dont have stripe_account_id yet, then create new
    if (!user.stripe_account_id) {
      const account = await stripe.accounts.create({ type: "express" });
      // console.log('ACCOUNT => ', account.id)
      user.stripe_account_id = account.id;
      user.save();
    }
    // 3. create account link based on account id (for frontend to complete onboarding)
    let accountLink = await stripe.accountLinks.create({
      account: user.stripe_account_id,
      refresh_url: process.env.STRIPE_REDIRECT_URL,
      return_url: process.env.STRIPE_REDIRECT_URL,
      type: "account_onboarding",
    });
    //  console.log(accountLink)
    // 4. pre-fill any info such as email (optional), then send url resposne to frontend
    accountLink = Object.assign(accountLink, {
      "stripe_user[email]": user.email,
    });
    // 5. then send the account link as response to fronend
    res.send(`${accountLink.url}?${queryString.stringify(accountLink)}`);
  } catch (err) {
    console.log("MAKE INSTRUCTOR ERR ", err);
  }
};



